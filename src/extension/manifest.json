{
  "manifest_version": 3,
  "name": "TIPS (Text Interpretation & Prediction Service)",
  "version": "0.2.0",
  "description": "Select text on any webpage to get AI-powered interpretations, previews, and suggestions.",
  "action": {
    "default_popup": "src/frontend/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "src/frontend/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/frontend/content.js"],
      "css": ["src/frontend/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [".anthropic/INTERPRET.txt"],
      "matches": ["<all_urls>"]
    }
  ]
}
